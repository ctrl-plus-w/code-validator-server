{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "sourceMap": true,
    "pretty": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "listFiles": false,
    "skipLibCheck": true,
    "types": ["node"],
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"],
      "@resolver/*": ["graphql/resolvers/*"],
      "@typeDef/*": ["graphql/typeDefs/*"],
      "@scalar/*": ["graphql/scalars/*"],
      "@model/*": ["database/models/*"],
      "@database/*": ["database/*"],
      "@graphql/*": ["graphql/*"],
      "@util/*": ["utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test/**/*"]
}
